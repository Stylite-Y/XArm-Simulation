    <compiler angle="radian"/>
    <!-- <option timestep="0.002" noslip_iterations="20"/> -->
    <option timestep="0.002"/>
    <size nuser_actuator="5"/>

    <asset>
        <mesh name="motor1" file="meshes/motor1.STL" scale="0.001 0.001 0.001"/>
        <mesh name="motor2" file="meshes/motor2.STL" scale="0.001 0.001 0.001"/>
        <mesh name="motor3" file="meshes/motor3.STL" scale="0.001 0.001 0.001"/>
        <mesh name="upper" file="meshes/upper.STL" scale="0.001 0.001 0.001"/>
        <mesh name="lower" file="meshes/lower-limb.STL" scale="0.001 0.001 0.001"/>
        <mesh name="wrist" file="meshes/wrist_roll.STL" scale="0.001 0.001 0.001"/>
        <mesh name="gripper" file="meshes/griper.STL" scale="0.001 0.001 0.001"/>

        <!--color property definition-->
        <material name="silver" specular="1" shininess="0.5" reflectance="1" emission="0.25" rgba="0.8 0.8 0.8 1"/>
        <material name="grey" specular="1" shininess="0.5" reflectance="1" emission="0.1" rgba="0.3 0.3 0.3 1"/>
        <material name="blue" specular="1" shininess="0.5" reflectance="1" emission="0" rgba="0.0196 0.7058 1 1"/>
        <material name="greyblack" specular="1" shininess="0.5" reflectance="1" emission="0" rgba="0.1765 0.1765 0.1765 1"/>
        <material name="black" specular="1" shininess="0.5" reflectance="1" emission="0" rgba="0.1 0.1 0.1 1"/>
    </asset>

    <default>
        <default class="LISM">
            <joint pos="0 0 0" axis="0 0 1" limited="true"/>
            <position forcelimited="true" ctrllimited="true" user="1002 40 2001 -0.005 0.005"/>
            <default class="LISM_viz">
                <!--noncollision property definition: contype="0" conaffinity="0"; and the model is in group 0-->
                <geom contype="0" conaffinity="0" group="0" type="mesh"  mass="0"/> 
            </default>

            <default class="LISM_col">
                <!--noncollision property definition: contype="1" conaffinity="1"; and the model is in group 3-->
                <geom contype="1" conaffinity="1" group="3" type="mesh" rgba=".5 .6 .7 1"/>
            </default>
            <default class="LISM_arm">
                <joint damping="100"/>
            </default>
             <default class="LISM_forearm">
                <joint damping="10"/>
            </default>
             <default class="LISM_gripper">
                <joint damping="100" armature='5'/>
                <geom friction="1 0.5 0.0001" solref="0.01 1" solimp="0.8 0.9 0.001" margin="0.001" user="0" rgba="0.5 0.6 0.7 .4" contype="1" conaffinity="0" condim="6" group="3" />
                <position user="1002 40 2001 -0.0001 0.0001"/>
            </default>
        </default>

        <default class="LISM_overlay">
            <joint limited="false" damping="1000" armature="1" frictionloss="10"/>
            <geom contype="0" conaffinity="0" group="2" type="mesh" rgba=".42 0.42 0.42 .5"/>
        </default>
    </default>

    <sensor>
        <jointpos name="LISM_arm_jp1" joint="motor1_motor2"/>
        <jointpos name="LISM_arm_jp2" joint="motor2_motor3"/>
        <jointpos name="LISM_arm_jp3" joint="motor3_upper"/>
        <jointpos name="LISM_arm_jp4" joint="upper_lower"/>
        <jointpos name="LISM_arm_jp5" joint="lower_wrist_x"/>
        <jointpos name="LISM_arm_jp6" joint="lower_wrist_y"/>
        <jointpos name="LISM_arm_jp7" joint="lower_wrist_z"/>
        <jointpos name="LISM_fin_jp1" joint="gripper_left"/>
        <jointpos name="LISM_fin_jp2" joint="gripper_right"/>
        <jointvel name="LISM_arm_jv1" joint="motor1_motor2"/>
        <jointvel name="LISM_arm_jv2" joint="motor2_motor3"/>
        <jointvel name="LISM_arm_jv3" joint="motor3_upper"/>
        <jointvel name="LISM_arm_jv4" joint="upper_lower"/>
        <jointvel name="LISM_arm_jv5" joint="lower_wrist_x"/>
        <jointvel name="LISM_arm_jv6" joint="lower_wrist_y"/>
        <jointvel name="LISM_arm_jv7" joint="lower_wrist_z"/>
        <jointvel name="LISM_fin_jv1" joint="gripper_left"/>
        <jointvel name="LISM_fin_jv2" joint="gripper_right"/>
    </sensor>

</mujocoinclude>