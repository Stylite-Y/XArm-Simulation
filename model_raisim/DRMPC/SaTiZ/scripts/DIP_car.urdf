<?xml version="1.0" ?>
<robot name="LISM_Arm">
     <!--base of fixing arm-->
    <link name="world"/>

    <joint name="worldTobase" type="fixed">
        <parent link="world"/>
        <child link="base"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
    </joint>
    
    <link name="base">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.01"/>
            <geometry>
                <box size = "0.2 0.3 0.02"/>
            </geometry>
        </visual>
    </link>

     <joint name="basetocar" type="prismatic">
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
        <parent link="base"/>
        <child link="car"/>
    </joint>

    <link name="car">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.1"/>
            <geometry>
                <box size = "0.2 0.3 0.2"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.5"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.1"/>
            <inertia ixx="0.0104167" ixy="0" ixz="0.0" iyy="0.0104167" iyz="0" izz="0.000225"/>
        </inertial>
    </link>

    <joint name="carToLink" type="revolute">
        <axis xyz="-1 0 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.2"/>
        <parent link="car"/>
        <child link="link1"/>
    </joint>

    <link name="link1">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.2"/>
            <geometry>
                <cylinder length="0.4" radius="0.02"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.3"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.2"/>
            <inertia ixx="0.004" ixy="0" ixz="0.0" iyy="0.0104167" iyz="0" izz="0.000225"/>
        </inertial>
    </link>

    <joint name="l12l2" type="revolute">
        <axis xyz="-1 0 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.4"/>
        <parent link="link1"/>
        <child link="link2"/>
    </joint>

    <link name="link2">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.2"/>
            <geometry>
                <cylinder length="0.4" radius="0.02"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.4"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.2"/>
            <inertia ixx="0.0053" ixy="0" ixz="0.0" iyy="0.0015" iyz="0" izz="0.000225"/>
        </inertial>
    </link>

</robot>