<?xml version="1.0" ?>
<robot name="LISM_Arm">
     <!--base of fixing arm-->
    <link name="world"/>

    <joint name="worldTobase" type="fixed">
        <parent link="world"/>
        <child link="base"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
    </joint>
    
    <link name="base">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.01"/>
            <geometry>
                <box size = "0.2 0.3 0.02"/>
            </geometry>
        </visual>
    </link>

    <joint name="BaseToLink" type="revolute">
        <axis xyz="-1 0 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
        <parent link="base"/>
        <child link="link1"/>
    </joint>

    <link name="link1">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.4"/>
            <geometry>
                <cylinder length="0.8" radius="0.03"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.5"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.4"/>
            <inertia ixx="0.035" ixy="0" ixz="0.0" iyy="0.035" iyz="0" izz="0.036"/>
        </inertial>
    </link>

    <joint name="l12l2" type="revolute">
        <axis xyz="-1 0 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.8"/>
        <parent link="link1"/>
        <child link="link2"/>
    </joint>

    <link name="link2">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.15"/>
            <geometry>
                <cylinder length="0.3" radius="0.03"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.2"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.15"/>
            <inertia ixx="0.005" ixy="0" ixz="0.0" iyy="0.35" iyz="0" izz="0.006"/>
        </inertial>
    </link>

    <joint name="l22l3" type="revolute">
        <axis xyz="-1 0 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.3"/>
        <parent link="link2"/>
        <child link="link3"/>
    </joint>

    <link name="link3">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.15"/>
            <geometry>
                <cylinder length="0.3" radius="0.03"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.2"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.15"/>
            <inertia ixx="0.005" ixy="0" ixz="0.0" iyy="0.35" iyz="0" izz="0.006"/>
        </inertial>
    </link>
</robot>