<?xml version="1.0" ?>
<robot name="LISM_Arm">
     <!--base of fixing arm-->
    <link name="world"/>

    <joint name="worldTobase" type="fixed">
        <parent link="world"/>
        <child link="base"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
    </joint>
    
    <link name="base">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 0.01"/>
            <geometry>
                <box size = "0.2 0.3 0.02"/>
            </geometry>
        </visual>
    </link>

    <joint name="BaseToLink" type="revolute">
        <axis xyz="-1 0 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
        <parent link="base"/>
        <child link="link1"/>
    </joint>

    <link name="link1">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 {@@L_body/2}"/>
            <geometry>
                <cylinder length="{@@L_body}" radius="0.03"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="{@@body_mass}"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 {@@body_mc}"/>
            <inertia ixx="{@@body_inertia}" ixy="0" ixz="0.0" iyy="{@@body_inertia}" iyz="0" izz="0.036"/>
        </inertial>
    </link>

    <joint name="l12l2" type="revolute">
        <axis xyz="-1 0 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 {@@L_body}"/>
        <parent link="link1"/>
        <child link="link2"/>
    </joint>

    <link name="link2">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 {@@L_thigh/2}"/>
            <geometry>
                <cylinder length="{@@L_thigh}" radius="0.03"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="{@@thigh_mass}"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 {@@thigh_mc}"/>
            <inertia ixx="{@@thigh_inertia}" ixy="0" ixz="0.0" iyy="{@@thigh_inertia}" iyz="0" izz="0.006"/>
        </inertial>
    </link>

    <joint name="l22l3" type="revolute">
        <axis xyz="-1 0 0"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 {@@L_thigh}"/>
        <parent link="link2"/>
        <child link="link3"/>
    </joint>

    <link name="link3">
        <visual>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 {@@L_shank/2}"/>
            <geometry>
                <cylinder length="{@@L_shank}" radius="0.03"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="{@@shank_mass}"/>
            <origin rpy="0.0 0.0 0.0" xyz="0 0 {@@shank_mc}"/>
            <inertia ixx="{@@shank_inertia}" ixy="0" ixz="0.0" iyy="{@@shank_inertia}" iyz="0" izz="0.006"/>
        </inertial>
    </link>
</robot>